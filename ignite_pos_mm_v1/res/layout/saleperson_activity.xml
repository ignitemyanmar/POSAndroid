<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ignite.pos"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lyheader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <com.smk.skscalableview.ScalableLinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:scale_width="4" >

            <com.ignite.custom.view.CustomTextView
                android:id="@+id/txt_co_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ေရာင္းသူ: " />

            <Spinner
                android:id="@+id/spSalePerson"
                style="@android:style/Theme.DeviceDefault"
                android:layout_width="230dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_button"
                android:drawSelectorOnTop="true" />

        </com.smk.skscalableview.ScalableLinearLayout>

        <com.smk.skscalableview.ScalableLinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:scale_width="4" >

            <com.ignite.custom.view.CustomTextView
                android:id="@+id/txt_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ေန႔မွ: " />

            <com.ignite.custom.view.CustomButton
                android:id="@+id/btnFromDate"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="ေန႔မွ" />

        </com.smk.skscalableview.ScalableLinearLayout>

        <com.smk.skscalableview.ScalableLinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:scale_width="4" >

            <com.ignite.custom.view.CustomTextView
                android:id="@+id/CustomTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ေန႔ထိ: " />

            <com.ignite.custom.view.CustomButton
                android:id="@+id/btnToDate"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="ေန႔ထိ" />

        </com.smk.skscalableview.ScalableLinearLayout>

        <com.smk.skscalableview.ScalableLinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:scale_width="4" >

            <com.ignite.custom.view.CustomButton
                android:id="@+id/btnSearch"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn_darkblue"
                android:text="ရွာမည္"
                android:textColor="@color/white" />

        </com.smk.skscalableview.ScalableLinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyheader"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/sale_report_header" />

        <ListView
            android:id="@+id/lv_sale_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" >

        </ListView>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/saleperson_footer" />

    </LinearLayout>

</RelativeLayout>