<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skscalable="http://schemas.android.com/apk/res/com.ignite.pos"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ignite"
                    android:textColor="@color/dark_gray"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moshi Mart | Tel: 09-454545"
                    android:textColor="@color/dark_gray"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center" >

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:text="Vou No :  "
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_vou_no"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:text="-"
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView3"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:text="Date   : "
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_date"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:text="-"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center" >

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:text="Payee   :  "
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_sale_person"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:text="-"
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView3"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:text="Buyer : "
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_buyer"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="left|center_vertical"
                    android:text="-"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_border"
                android:padding="5dp" >

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:text="Description"
                    android:textSize="18dp" />

                <com.smk.skscalableview.ScalableLinearLayout
                    android:id="@+id/ScalableLinearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="10"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Price * "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Qty"
                        android:textSize="18dp" />
                </com.smk.skscalableview.ScalableLinearLayout>

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="10"
                    android:gravity="right|center_vertical"
                    android:text="Amount"
                    android:textSize="18dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" >
            </ListView>

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right" >

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/ScalableTextView01"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="Total"
                        android:textSize="18dp" />

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/txt_grand_total"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="0.00"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right" >

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/ScalableTextView1"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="Disc"
                        android:textSize="18dp" />

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/txt_discount"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="0.00"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right" >

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/ScalableTextView03"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="right|center_vertical"
                        android:text="Net Amount"
                        android:textSize="18dp" />

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/txt_net_amount"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="0.00"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You. Have a nice shopping!"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/btn_done"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/girditem_border"
            android:text="DONE"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/girditem_border"
            android:text="PRINT"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>