<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="vertical"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:orientation="vertical"
            android:scrollbars="none"
            android:splitMotionEvents="false"
            android:fadeScrollbars="false" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:background="@color/transprant_white"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:scrollbars="none"
                android:splitMotionEvents="false"
                android:fadeScrollbars="false" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/green"
                    android:gravity="center_vertical|center"
                    android:text="Add New Item"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/editText_scan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/editext_border"
                    android:gravity="center"
                    android:hint="Item Code [ Item-000001]"
                    android:paddingLeft="5dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/txt_last_item_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Last Item Code [Item-000001]"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/editText_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editext_border"
                    android:gravity="center"
                    android:hint="Item Name"
                    android:inputType="textCapWords|textPersonName"
                    android:paddingLeft="5dp"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical" >

                    <Spinner
                        android:id="@+id/spn_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_border"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_new_category"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/girditem_border"
                        android:padding="5dp"
                        android:text="Add New Category"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical" >

                    <Spinner
                        android:id="@+id/spn_subcategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_border"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_new_subcategory"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/girditem_border"
                        android:padding="5dp"
                        android:text="Add New Sub-Category"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical" >

                    <Spinner
                        android:id="@+id/spn_brand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_border"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_new_brand"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/girditem_border"
                        android:padding="5dp"
                        android:text="Add New Brand"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_button"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>