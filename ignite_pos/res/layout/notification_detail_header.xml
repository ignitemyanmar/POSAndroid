<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ignite.pos"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_green_stroke"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.smk.skscalableview.ScalableTextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            android:gravity="left|center_vertical"
            android:text="Item Name"
            android:textSize="20dp" />

        <com.smk.skscalableview.ScalableTextView
            android:id="@+id/ScalableTextView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            android:gravity="left|center_vertical"
            android:text="Item Code"
            android:textSize="20dp" />

        <com.smk.skscalableview.ScalableTextView
            android:id="@+id/ScalableTextView05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            android:gravity="left|center_vertical"
            android:text="Qty"
            android:textSize="20dp" />

        <com.smk.skscalableview.ScalableTextView
            android:id="@+id/ScalableTextView04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            android:gravity="left|center_vertical"
            android:text="Supplier"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>