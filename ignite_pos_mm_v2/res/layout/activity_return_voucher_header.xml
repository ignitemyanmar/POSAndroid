<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >

                <com.ignite.custom.view.CustomTextView
                    android:id="@+id/txt_co_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ignite"
                    android:textColor="@color/dark_gray"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <com.ignite.custom.view.CustomTextView
                    android:id="@+id/txt_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moshi Mart | ဖုန္းနံပါတ္: 09-454545"
                    android:textColor="@color/dark_gray"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center" >

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_vouNo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="ေဘာင္ ခ်ာ :"
                    android:textSize="14dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_sale_voucher_no"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="left|center_vertical"
                    android:text="Rev"
                    android:textSize="14dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_vou_no"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-60dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="15"
                    android:gravity="left|center_vertical"
                    android:text="-"
                    android:textSize="14dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="ေန႔ရက္  : "
                    android:textSize="14dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="-"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="left|center_vertical" >

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_vouNo"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="left|center_vertical"
                    android:text="ေငြျပန္ အမ္းသူ :  "
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="vertical" >

                    <com.smk.skscalableview.ScalableTextView
                        android:id="@+id/ScalableTextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Rev"
                        android:textSize="14dp"
                        android:visibility="gone" />
                </LinearLayout>

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_sale_person"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="15"
                    android:gravity="left|center_vertical"
                    android:text="-"
                    android:textSize="14dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView3"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="right|center_vertical"
                    android:text="ေငြလက္ ခံသူ : "
                    android:textSize="14dp" />

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_buyer"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight="15"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="-"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_border"
                android:padding="5dp" >

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/txt_vouNo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:text="ပစၥည္းအမည္"
                    android:textSize="16dp" />

                <com.smk.skscalableview.ScalableLinearLayout
                    android:id="@+id/ScalableLinearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="20"
                    android:gravity="center" >

                    <com.ignite.custom.view.CustomTextView
                        android:id="@+id/txt_co_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ေစ်း ႏႈန္း * "
                        android:textSize="16dp" />

                    <com.ignite.custom.view.CustomTextView
                        android:id="@+id/txt_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="အ ေရ အတြက္"
                        android:textSize="16dp" />
                </com.smk.skscalableview.ScalableLinearLayout>

                <com.smk.skscalableview.ScalableTextView
                    android:id="@+id/ScalableTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="30"
                    android:gravity="right|center_vertical"
                    android:text="ေငြပမာဏ"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>