<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/golden_brown_light"
        android:gravity="center" >

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_sale_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="3dp"
            android:text="Sale Date: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:text="Name: -"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_trip_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:text="Trip: -"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_trip_date_time_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Dept Info: -"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Seats : - "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Price: - Ks"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Amount: - Ks"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:gravity="right"
        android:padding="10dp" >

        <Button
            android:id="@+id/btn_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:text="Print"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>